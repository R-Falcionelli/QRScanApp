<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- SECTION 1 — Recherche -->
        <EditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:hint="Saisir N°FI"
            android:maxLength="8"
            android:inputType="text|textCapCharacters"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp">

            <Button
                android:id="@+id/btnSearch"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:textSize="10sp"
                android:text="Chercher"/>

            <Space
                android:layout_width="12dp"
                android:layout_height="0dp"/>

            <Button
                android:id="@+id/btnScanFi"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:textSize="10dp"
                android:text="Scanner N°FI"
                app:iconPadding="0dp" />

            <Space
                android:layout_width="12dp"
                android:layout_height="0dp"/>

            <Button
                android:id="@+id/btnInit"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:textSize="10dp"
                android:text="Effacer"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="#33000000"/>

        <!-- SECTION 2 — Identification -->
        <TextView
            android:id="@+id/tvNumFI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="N°FI"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/tvNumAff"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="N°Affaire"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvPosit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Position"
                android:textStyle="bold"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvClient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Client"
            android:textStyle="bold"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="#19000000"/>

        <!-- SECTION 3 — Appareil -->
        <TextView
            android:id="@+id/tvAppareil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Appareil"/>

        <TextView
            android:id="@+id/tvMarque"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Marque"/>

        <TextView
            android:id="@+id/tvType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Type"/>

        <TextView
            android:id="@+id/tvSerie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="N°Série"/>

        <TextView
            android:id="@+id/tvMarquage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Marquage"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="#19000000"/>

        <!-- SECTION 4 — Suivi -->
        <TextView
            android:id="@+id/tvDateEntre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Entré le"/>

        <TextView
            android:id="@+id/tvDateEnreg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Enregistré le"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical">

            <CheckBox
                android:id="@+id/chkFinterv"
                style="@style/CompactCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fin Intervention"
                android:clickable="false"/>

            <Space
                android:layout_width="16dp"
                android:layout_height="0dp"/>

            <TextView
                android:id="@+id/tvDateFin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date Fin"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

            <CheckBox
                android:id="@+id/chkCF"
                style="@style/CompactCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contrôle Final"
                android:clickable="false"/>

            <Space
                android:layout_width="16dp"
                android:layout_height="0dp"/>

            <TextView
                android:id="@+id/tvDateCF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date CF"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvOpReal"
            android:layout_width="239dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Opérations" />

        <!-- Docs + Conclusion sur la même ligne -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical">

            <!-- Conteneur pour les boutons Docs -->
            <LinearLayout
                android:id="@+id/docsContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="left"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tvConclusion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CONCLUSION"
                android:textStyle="bold"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="#19000000"/>

        <!-- SECTION 5 — Expédition / Facturation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <LinearLayout
                android:id="@+id/BLContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="left"
                android:layout_marginEnd="8dp"/>
<!--            <TextView-->
<!--                android:id="@+id/tvNumBL"-->
<!--                android:layout_width="57dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_weight="1"-->
<!--                android:ellipsize="end"-->
<!--                android:maxLines="1"-->
<!--                android:text="N°BL" />-->

            <TextView
                android:id="@+id/tvDateBL"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Date BL"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/tvDateCrea"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="BL créé le"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/tvPar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Par"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/tvNumFact"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="N°Fact."
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/tvDateFact"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Date Facture"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="#19000000"/>

        <!-- SECTION 6 — Emplacement -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvLblEmp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emplacement"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tvResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="#006400"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:visibility="gone"/>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="24dp"/>
    </LinearLayout>
</ScrollView>